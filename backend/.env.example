# Environment variables
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pathri_db?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Payment Gateway (Sandbox)
PAYMENT_MODE=sandbox
RAZORPAY_KEY_ID=sandbox_key_id
RAZORPAY_KEY_SECRET=sandbox_key_secret

# Notifications
SMS_PROVIDER=mock
SMS_API_KEY=mock_key
EMAIL_PROVIDER=mock
EMAIL_API_KEY=mock_key
EMAIL_FROM=noreply@saibaba-pathri.org

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
